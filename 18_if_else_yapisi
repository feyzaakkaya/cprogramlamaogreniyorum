#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main(int argc, char** argv){
    int sayi;
    srand(time(NULL));
    sayi=rand()%1000;
    printf("Rastgele secilen deger = %d \n",sayi);

    if (sayi%2==0){
        printf("%d degeri cift sayidir.",sayi);
    }
    
    else {
        printf("%d degeri tek sayidir.",sayi);
    }

    return 0;
