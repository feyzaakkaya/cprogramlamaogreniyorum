#include <stdio.h>

int main(){
    int sayi1=12,sayi2=3; //atama operatoru

    printf("%d + %d isleminin sonucu = %d \n",sayi1,sayi2,sayi1+sayi2); //toplama operatoru
    printf("%d - %d isleminin sonucu = %d \n",sayi1,sayi2,sayi1-sayi2); //cıkarma operatoru
    printf("%d * %d isleminin sonucu = %d \n",sayi1,sayi2,sayi1*sayi2); //carpma operatoru
    printf("%d / %d isleminin sonucu = %d \n",sayi1,sayi2,sayi1/sayi2); //bolme operatoru
    printf("%d %% %d isleminin sonucu = %d \n\n",sayi1,sayi2,sayi1%sayi2); //mod alma operatoru

    sayi1=-sayi1;
    printf("12 sayisinin negatif hali = %d \n\n",sayi1); //negatifleme operatoru

    int sayi3 = 6, sayi4 = 6; //aritmetik artırma operatorleri
    printf("sayi3'un degeri = %d \n",sayi3++); //once sayiyi sonra artirilmis halini yazar.
    printf("sayi3'un sonraki degeri = %d \n",sayi3);
    printf("sayi4'un degeri = %d \n",++sayi4); //once sayiyi artiririr ve artirilmis halini yazar.
    printf("sayi4'un sonraki degeri = %d \n\n",sayi4);

    int sayi5 = 6, sayi6 = 6;
    printf("sayi5'in degeri = %d \n",sayi5--); //once sayiyi sonra eksilmis halini yazar.
    printf("sayi5'in sonraki degeri = %d \n",sayi5);
    printf("sayi6'nin degeri = %d \n",--sayi6);//once sayiyi eksiltir ve eksilmis halini yazar.
    printf("sayi6'nin sonraki degeri = %d \n\n",sayi6);

    int sayi7 = 100;
    sayi7+=12; //topla ve ata operatoru
    sayi7-=24; //cıkar ve ata operatoru
    printf("sayi7'nin son hali = %d \n\n",sayi7);

    int sayi8 = 1;
    sayi8*=4; //carp ve ata operatoru
    sayi8*=6;
    sayi8/=12; //bol ve ata operatoru
    printf("sayi8'in sayisinin son hali = %d \n\n",sayi8);

    int sayi9 = 24;
    sayi9%=9; //bol ve kalani ata operatoru
    printf("sayi9'un 4'e bolumunden kalan = %d \n",sayi9);

    return 0;
}
